@model IEnumerable<Mwh.Sample.Domain.Models.EmployeeDto>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>Age</th>
            <th>State</th>
            <th>Country</th>
            <th>Department</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="#" class="" onclick="return loadEmployeeEdit('@item.Id')">
                            <img src="~/images/@item.ProfilePicture" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>

                    </td>
                    <td>
                        @item.Gender
                    </td>
                    <td>
                        @item.Age
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @item.Department
                    </td>
                    <td>
                        <a href="#" class="btn btn-primary" onclick="return loadEmployeeEdit('@item.Id')">Edit</a>
                        <a href="#" class="btn btn-warning" onclick="return loadEmployeeDelete('@item.Id')">Delete</a>
                    </td>
                </tr>
            }

        }


    </tbody>
    <tfoot></tfoot>
</table>
<script type="text/javascript">
    $('.table').DataTable();
</script>