@model IEnumerable<Mwh.Sample.Domain.Models.EmployeeDto>


<div id="output"></div>
    
<table class="table table-bordered table-hover hidden" id="input">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>State</th>
            <th>Country</th>
            <th>Department</th>
            <th>Gender</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @item.Age
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @item.Department
                    </td>
                    <td>
                        @item.Gender
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot></tfoot>
</table>
<script type="text/javascript">
    $("#output").pivotUI($("#input"),
    {
    });

</script>